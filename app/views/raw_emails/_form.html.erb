<div class="form-horizontal" role="form">
  <%= form_for @raw_email do |f| %>
    <div class="form-group">
      <h2><%= f.label :raw_email, class: "col-sm-8" %></h2>
        <div class="col-sm-8">
          <%= f.text_area :raw_email, rows: 10, class: "form-control" %>
        </div>
    </div>
    <div class="form-group col-sm-8">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
</div>