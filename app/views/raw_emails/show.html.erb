<h1>Raw Email</h1>

<div class="row">
  <div class="col-md-8">
    <%= link_to "Back", raw_emails_path, class: 'btn btn-primary' %>
  </div>
</div>

<hr />

<p>
  <strong>Raw Email</strong>
  <textarea class="form-control" rows="10" readonly><%= @raw_email.text_input %></textarea>
</p>

<h1>Parsed E-Mail</h1>
<table class="table table-striped table-condensed">
  <tr>
    <th><%= @raw_email.parse_message_id %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_date %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_to %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_authentication_results %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_from %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_return_path %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_content_type %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_content_transfer_encoding %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_mime_version %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_dkim_signature %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_references %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_subject %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_received_from %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_received_by %></th>
  </tr>
  <tr>
    <th><%= @raw_email.parse_received_spf %></th>
  </tr>
</table>
<p>
  <strong>Body</strong>
  <textarea class="form-control" rows="20" readonly><%= @raw_email.parse_body %></textarea>
</p>

<div class="row">
  <div class="col-md-8">
    <%= link_to "Back", raw_emails_path, class: 'btn btn-primary' %>
  </div>
</div>