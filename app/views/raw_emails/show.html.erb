<div class="container">
  <h1>Raw Email</h1>

  <div class="row">
    <div class="col-md-8">
      <%= link_to "Back", raw_emails_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <hr />

  <p>
    <strong>Raw Email</strong>
    <textarea class="form-control" rows="10" readonly><%= @raw_email.raw_email %></textarea>
  </p>

  <h1>Parsed E-Mail</h1>
  <table class="table table-striped table-condensed">
    <% @parsed_email["Header"].each do |raw| %>
    <tr>
      <th><%= raw[0] %></th>
      <td><%= raw[1] %></td>
    </tr>
    <% end %>
  </table>

  <p>
    <strong>Body</strong>
    <textarea class="form-control" rows="20" readonly><%= @parsed_email["Body"] %></textarea>
  </p>

  <div class="row">
    <div class="col-md-8">
      <%= link_to "Back", raw_emails_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

